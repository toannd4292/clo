{%- if block.settings.liquid != blank -%}
  <div class="liquid" {{ block.shopify_attributes }}>
    {{- block.settings.liquid -}}
  </div>
{%- endif -%}

{% schema %}
  {
    "name": "t:blocks.liquid.name",
    "tag": null,
    "settings": [
      {
        "type": "liquid",
        "id": "liquid",
        "label": "t:global.code.liquid",
        "info": "t:global.code.liquid_info",
        "default": "<p>Write some Liquid code.</p>"
      }
    ],
    "presets": [
      {
        "name": "t:blocks.liquid.name"
      }
    ]
  }
  {% endschema %}